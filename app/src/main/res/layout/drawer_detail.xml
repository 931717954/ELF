<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="215dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <com.zixuan.elf.customizeView.GramophoneView
        android:id="@+id/grp_user_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_gravity="end"
        app:disk_rotate_speed="0"
        app:picture_radiu="60dp"
        app:src="@drawable/ic_disk_src"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:gravity="end"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_daily_recommend_cn"
            android:gravity="end"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginEnd="30dp"
            android:text="@string/daily_recommend_cn"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/tv_daily_recommend_eg"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:text="Daily Recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_comments_plaza_cn"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:text="广场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comments_plaza_eg"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:text="Comments Plaza"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_my_collection_cn"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:text="我的收藏"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_my_collection_eg"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:text="My Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_setting_cn"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="32dp"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_setting_eg"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:text="Setting"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

